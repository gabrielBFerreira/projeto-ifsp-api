{
  "openapi": "3.0.0",
  "info": {
    "description": "## Documentação da API do E-commerce da boutique 'Donna Monique'\n",
    "version": "1.0.0",
    "title": "Donna Monique",
    "contact": {
      "email": "gabriel.brisolla@aluno.ifsp.edu.br"
    }
  },
  "paths": {
    "/users": {
      "get": {
        "tags": ["Usuários"],
        "summary": "Lista os usuários cadastrados no banco. Obs.: OBRIGATÓRIO autenticação de administrador com token",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "usuarios": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "format": "int32",
                            "example": "1"
                          },
                          "nome": {
                            "type": "string",
                            "example": "Jonas H. B."
                          },
                          "email": {
                            "type": "string",
                            "example": "jonashb@gmail.com"
                          },
                          "senha": {
                            "type": "string",
                            "example": "MVc0Tk40QjNGNE0wVSQ"
                          },
                          "dataNasc": {
                            "type": "string",
                            "example": "1999-07-14T00:00:00.000Z"
                          },
                          "sexo": {
                            "type": "string",
                            "example": "M"
                          },
                          "genero": {
                            "type": "string",
                            "example": "Masculino"
                          },
                          "tipoConta": {
                            "type": "integer",
                            "format": "int32",
                            "example": "1"
                          },
                          "enderecos": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "integer",
                                  "format": "int32",
                                  "example": "1"
                                },
                                "rua": {
                                  "type": "string",
                                  "example": "Av. NTI"
                                },
                                "numero": {
                                  "type": "string",
                                  "example": "142B"
                                },
                                "complemento": {
                                  "type": "string",
                                  "example": "Edifício Vale dos Anjos"
                                },
                                "bairro": {
                                  "type": "string",
                                  "example": "Jardim São Marcos"
                                },
                                "cidade": {
                                  "type": "string",
                                  "example": "Piraju"
                                },
                                "uf": {
                                  "type": "string",
                                  "example": "SP"
                                },
                                "cep": {
                                  "type": "string",
                                  "example": "18731679"
                                },
                                "idUsuario": {
                                  "type": "integer",
                                  "example": "1"
                                }
                              }
                            }
                          },
                          "telefones": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "integer",
                                  "format": "int32",
                                  "example": "1"
                                },
                                "ddi": {
                                  "type": "string",
                                  "example": "+55"
                                },
                                "ddd": {
                                  "type": "string",
                                  "example": "15"
                                },
                                "numero": {
                                  "type": "string",
                                  "example": "987654321"
                                },
                                "tipoTelefone": {
                                  "type": "string",
                                  "example": "Celular"
                                },
                                "idUsuario": {
                                  "type": "integer",
                                  "example": "1"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno."
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Produtos"],
        "summary": "Lista os produtos cadastrados no banco, com detalhes de sua categoria e suas imagens relacionadas.",
        "parameters": [
          {
            "name": "idCategoria",
            "in": "query",
            "description": "ID da categoria do produto (filtro opcional)",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "produtos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "format": "int32",
                            "example": "1"
                          },
                          "nome": {
                            "type": "string",
                            "example": "Vestido Maiden CH"
                          },
                          "descricao": {
                            "type": "string",
                            "example": "Vestido longo"
                          },
                          "marca": {
                            "type": "string",
                            "example": "Carolina Herrera"
                          },
                          "tamanho": {
                            "type": "string",
                            "example": "M"
                          },
                          "estilo": {
                            "type": "string",
                            "example": "Liso"
                          },
                          "cores": {
                            "type": "string",
                            "example": "Vermelho"
                          },
                          "preco": {
                            "type": "string",
                            "example": "189.99"
                          },
                          "idCategoria": {
                            "type": "integer",
                            "example": "1"
                          },
                          "categoria": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer",
                                "format": "int32",
                                "example": "1"
                              },
                              "nome": {
                                "type": "string",
                                "example": "Vestidos"
                              },
                              "descricao": {
                                "type": "string",
                                "example": "Roupas longas"
                              }
                            }
                          },
                          "figuras": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "_id": {
                                  "type": "string",
                                  "example": "62a980f277c64c0ccf47d2cd"
                                },
                                "caminho": {
                                  "type": "string",
                                  "example": "1655275762382-produto1.jpg"
                                },
                                "idProduto": {
                                  "type": "integer",
                                  "format": "int32",
                                  "example": "1"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno."
          }
        }
      },
      "post": {
        "tags": ["Produtos"],
        "summary": "Cadastra um produto no banco.",
        "description": "- Dados a serem enviados:<br>- Nome<br>- Descrição (um parágrafo sobre o produto)<br>- Marca<br>- Tamanho (PP, P, M, G, GG...)<br>- Estilo (listrado, liso, manchado...)<br>- Cores (separar por vírgula)<br>- Preço (em R$; formato: 0.00)<br>- ID da categoria\n- Token de autenticação de ADMINISTRADOR obrigatório",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "example": "Vestido Longo"
                  },
                  "descricao": {
                    "type": "string",
                    "example": "Vestido longo para ocasiões formais."
                  },
                  "marca": {
                    "type": "string",
                    "example": "Donna Monique"
                  },
                  "tamanho": {
                    "type": "string",
                    "example": "M"
                  },
                  "estilo": {
                    "type": "string",
                    "example": "Liso"
                  },
                  "cores": {
                    "type": "string",
                    "example": "Verde musgo, verde claro"
                  },
                  "preco": {
                    "type": "number",
                    "example": 179.99
                  },
                  "idCategoria": {
                    "type": "integer",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties": {
                    "produto": {
                      "type": "object",
                      "properties": {
                        "nome": {
                          "type": "string",
                          "example": "Vestido Longo"
                        },
                        "descricao": {
                          "type": "string",
                          "example": "Vestido longo para ocasiões formais."
                        },
                        "marca": {
                          "type": "string",
                          "example": "Donna Monique"
                        },
                        "tamanho": {
                          "type": "string",
                          "example": "M"
                        },
                        "estilo": {
                          "type": "string",
                          "example": "Liso"
                        },
                        "cores": {
                          "type": "string",
                          "example": "Verde musgo, verde claro"
                        },
                        "preco": {
                          "type": "number",
                          "example": 179.99
                        },
                        "idCategoria": {
                          "type": "integer",
                          "example": 1
                        },
                        "id": {
                          "type": "integer",
                          "example": 36
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description":"Erro interno."
          }
        }
      }
    },
    "/products/{idProduto}": {
      "get": {
        "tags": ["Produtos"],
        "summary": "Detalha dados de um produto, com detalhes de sua categoria e suas imagens relacionadas.",
        "parameters": [
          {
            "name": "idProduto",
            "in": "path",
            "description": "ID do produto (obrigatório)",
            "required": true,
            "schema": {
              "type": "integer",
              "example": "1"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "produto": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "format": "int32",
                          "example": "1"
                        },
                        "nome": {
                          "type": "string",
                          "example": "Vestido Maiden CH"
                        },
                        "descricao": {
                          "type": "string",
                          "example": "Vestido longo"
                        },
                        "marca": {
                          "type": "string",
                          "example": "Carolina Herrera"
                        },
                        "tamanho": {
                          "type": "string",
                          "example": "M"
                        },
                        "estilo": {
                          "type": "string",
                          "example": "Liso"
                        },
                        "cores": {
                          "type": "string",
                          "example": "Vermelho"
                        },
                        "preco": {
                          "type": "string",
                          "example": "189.99"
                        },
                        "idCategoria": {
                          "type": "integer",
                          "example": "1"
                        },
                        "categoria": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer",
                              "format": "int32",
                              "example": "1"
                            },
                            "nome": {
                              "type": "string",
                              "example": "Vestidos"
                            },
                            "descricao": {
                              "type": "string",
                              "example": "Roupas longas"
                            }
                          }
                        },
                        "figuras": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "_id": {
                                "type": "string",
                                "example": "62a980f277c64c0ccf47d2cd"
                              },
                              "caminho": {
                                "type": "string",
                                "example": "1655275762382-produto1.jpg"
                              },
                              "idProduto": {
                                "type": "integer",
                                "format": "int32",
                                "example": "1"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno."
          }
        }
      }
    },
    "/products/{idProduto}/pictures": {
      "post": {
        "tags": ["Produtos"],
        "summary": "Adicionar uma imagem ao produto",
        "description": "- Nome do campo que receberá a imagem é **figura**\n- Token de autenticação de ADMINISTRADOR obrigatório",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "figura": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "example": {
                  "figura": "foto_produto.jpg"
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Invalid file format, just accept images."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/categories": {
      "get": {
        "tags": ["Categorias"],
        "summary": "Lista as categorias de produtos cadastradas no banco.",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "categorias": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "format": "int32",
                            "example": "1"
                          },
                          "nome": {
                            "type": "string",
                            "example": "Vestidos"
                          },
                          "descricao": {
                            "type": "string",
                            "example": "Roupas que cobrem do ombro ou busto às pernas com uma saia, podendo ou não ter decotes."
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno."
          }
        }
      }
    },
    "/orders": {
      "post": {
        "tags":["Vendas"],
        "summary":"Cadastra uma venda no banco.",
        "description":"- Dados a serem enviados:<br>- Preço total (em R$; formato: 0.00; calculado no front)<br>- ID da forma de pagamento<br>- Lista de produtos com o ID e quantidade de cada um\n - É OBRIGATÓRIO mandar o token de autenticação nesta rota, o ID do usuário/cliente será extraído do token",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "precoTotal": {
                    "type": "number",
                    "example": 249.98
                  },
                  "idFormaPagamento": {
                    "type": "integer",
                    "example": 2
                  },
                  "produtos": {
                    "type":"array",
                    "items": {
                      "type":"object",
                      "properties":{
                        "idProduto":{
                          "type":"integer",
                          "example":14
                        },
                        "quantidade":{
                          "type":"integer",
                          "example":3
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses":{
          "200":{
            "description":"Sucesso",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "venda": {
                      "type": "object",
                      "properties": {
                        "dataVenda": {
                          "type": "string",
                          "example": "2022-05-23T00:00:00.000Z"
                        },
                        "precoTotal": {
                          "type": "number",
                          "example": 249.98
                        },
                        "statusPagamento": {
                          "type": "integer",
                          "format": "int32",
                          "example": 1
                        },
                        "statusEntrega": {
                          "type": "integer",
                          "format": "int32",
                          "example": 1
                        },
                        "idUsuario": {
                          "type": "integer",
                          "format": "int32",
                          "example": 83
                        },
                        "idFormaPagamento": {
                          "type": "integer",
                          "format": "int32",
                          "example": 2
                        },
                        "id": {
                          "type": "integer",
                          "format": "int32",
                          "example": 127
                        }
                      }
                    },
                    "produtosVenda": {
                      "type":"array",
                      "items": {
                        "type":"object",
                        "properties":{
                          "idProduto":{
                            "type":"integer",
                            "example":14
                          },
                          "idVenda":{
                            "type":"integer",
                            "example":127
                          },
                          "quantidade":{
                            "type":"integer",
                            "example":3
                          },
                          "id":{
                            "type":"integer",
                            "example":1482
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description":"Erro interno."
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "Veja mais sobre o Swagger",
    "url": "http://swagger.io"
  }
}
